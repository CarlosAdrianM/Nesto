<UserControl x:Class="Nesto.Modulos.CanalesExternos.Views.PoisonPillsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000" Language="es-ES">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding CargarPoisonPillsCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <Border Grid.Row="0" Margin="10" Background="#F5F5F5" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Estado:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox Width="150" Margin="0,0,15,0"
                          ItemsSource="{Binding EstadosDisponibles}"
                          SelectedItem="{Binding EstadoSeleccionado}"/>

                <TextBlock Text="Tabla:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox Width="150" Margin="0,0,15,0"
                          ItemsSource="{Binding TablasDisponibles}"
                          SelectedItem="{Binding TablaSeleccionada}"/>

                <Button Content="Buscar" Command="{Binding CargarPoisonPillsCommand}"
                        Padding="15,5" Margin="5,0"/>

                <TextBlock Text="{Binding TotalPoisonPills, StringFormat='Total: {0}'}"
                           VerticalAlignment="Center" Margin="20,0,0,0"
                           FontWeight="Bold" FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- DataGrid con Poison Pills -->
        <xctk:BusyIndicator Grid.Row="1" IsBusy="{Binding EstaOcupado}" BusyContent="Cargando...">
            <DataGrid ItemsSource="{Binding ListaPoisonPills}"
                      SelectedItem="{Binding PoisonPillSeleccionado}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      Margin="10,0,10,5"
                      SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tabla" Binding="{Binding Tabla}" Width="Auto"/>
                    <DataGridTextColumn Header="Entidad ID" Binding="{Binding EntityId}" Width="100"/>
                    <DataGridTextColumn Header="Origen" Binding="{Binding Source}" Width="80"/>
                    <DataGridTextColumn Header="Estado" Binding="{Binding Status}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="PoisonPill">
                                        <Setter Property="Foreground" Value="Red"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="Resolved">
                                        <Setter Property="Foreground" Value="Green"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="Reprocess">
                                        <Setter Property="Foreground" Value="Orange"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="PermanentFailure">
                                        <Setter Property="Foreground" Value="DarkRed"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Intentos" Binding="{Binding AttemptCount}" Width="70">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Primer Intento" Binding="{Binding FirstAttemptDate, StringFormat='yyyy-MM-dd HH:mm'}" Width="130"/>
                    <DataGridTextColumn Header="Último Intento" Binding="{Binding LastAttemptDate, StringFormat='yyyy-MM-dd HH:mm'}" Width="130"/>
                    <DataGridTextColumn Header="Tiempo desde 1er intento" Binding="{Binding TimeSinceFirstAttempt}" Width="*"/>
                    <DataGridTextColumn Header="Último Error" Binding="{Binding LastError}" Width="300">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="NoWrap"/>
                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                <Setter Property="ToolTip" Value="{Binding LastError}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </xctk:BusyIndicator>

        <!-- Botones de Acción -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
            <Button Content="Ver Detalle" Command="{Binding VerDetalleCommand}"
                    Padding="15,5" Margin="5"/>
            <Button Content="Reprocesar" Command="{Binding ReprocesarCommand}"
                    Padding="15,5" Margin="5" Background="#FFA500" Foreground="White"/>
            <Button Content="Marcar como Resuelto" Command="{Binding MarcarComoResueltoCommand}"
                    Padding="15,5" Margin="5" Background="#228B22" Foreground="White"/>
            <Button Content="Marcar como Fallo Permanente" Command="{Binding MarcarComoFalloPermanenteCommand}"
                    Padding="15,5" Margin="5" Background="#DC143C" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
