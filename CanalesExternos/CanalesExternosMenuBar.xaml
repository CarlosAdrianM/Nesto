<UserControl x:Class="Nesto.Modulos.CanalesExternos.CanalesExternosMenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nesto.Modulos.CanalesExternos"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Ribbon x:Name="MainMenu" x:FieldModifier="protected internal">
        <RibbonTab x:Name="tabHerramientas"
                            Header="Herramientas">
            <RibbonGroup x:Name="grpCanalesExternos"
                                Header="Canales Externos">
                <RibbonButton Label="Pedidos" LargeImageSource="Images/CanalesExternos.png" Command="{Binding AbrirModuloPedidosCommand}" />
                <RibbonButton Label="Pagos" LargeImageSource="Images/CanalesExternosPagos.png" Command="{Binding AbrirModuloPagosCommand}" />
            </RibbonGroup>
        </RibbonTab>
    </Ribbon>
</UserControl>
