<UserControl x:Class="Nesto.Modules.Producto.Views.VideosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:Nesto.Modules.Producto.Views"
             xmlns:viewmodels="clr-namespace:Nesto.Modules.Producto.ViewModels"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance Type=viewmodels:VideosViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1200"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" MinWidth="300"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel izquierdo: Lista de videos -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Barra de busqueda -->
            <Border Grid.Row="0" Background="#F5F5F5" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0"
                             Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             FontSize="14"
                             VerticalContentAlignment="Center">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding BuscarCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Grid.Column="1"
                            Command="{Binding BuscarCommand}"
                            Padding="10,8"
                            Margin="5,0,0,0"
                            Background="#4A90D9"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand">
                        Buscar
                    </Button>
                </Grid>
            </Border>

            <!-- Lista de videos -->
            <xctk:BusyIndicator Grid.Row="1" IsBusy="{Binding EstaCargando}" BusyContent="Cargando videos...">
                <ListView ItemsSource="{Binding Videos}"
                          SelectedItem="{Binding VideoSeleccionado}"
                          SelectionMode="Single"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Imagen del video -->
                                <Border Grid.Column="0"
                                        CornerRadius="4"
                                        Background="LightGray"
                                        Width="110"
                                        Height="62"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top">
                                    <Grid>
                                        <Image Source="{Binding UrlImagen}"
                                               Stretch="UniformToFill"
                                               RenderOptions.BitmapScalingMode="HighQuality">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding UrlImagen}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding UrlImagen}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>

                                        <!-- Placeholder cuando no hay imagen -->
                                        <TextBlock Text="Sin imagen"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="Gray"
                                                   FontSize="10">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding UrlImagen}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding UrlImagen}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <!-- Informacion del video -->
                                <StackPanel Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Top">
                                    <!-- Titulo -->
                                    <TextBlock Text="{Binding Titulo}"
                                               FontWeight="SemiBold"
                                               FontSize="12"
                                               TextWrapping="Wrap"
                                               MaxHeight="34"
                                               TextTrimming="CharacterEllipsis"/>

                                    <!-- Fecha de publicacion -->
                                    <TextBlock Text="{Binding FechaPublicacion, StringFormat='{}{0:dd/MM/yyyy}'}"
                                               FontSize="10"
                                               Foreground="DarkGray"
                                               Margin="0,3,0,0"/>

                                    <!-- Indicador de protocolo -->
                                    <Border Background="LightBlue"
                                            CornerRadius="2"
                                            Padding="4,2"
                                            HorizontalAlignment="Left"
                                            Margin="0,3,0,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding EsUnProtocolo}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="PROTOCOLO"
                                                   FontSize="9"
                                                   FontWeight="Bold"
                                                   Foreground="DarkBlue"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Margin" Value="0,1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F0F0F0"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </xctk:BusyIndicator>

            <!-- Boton cargar mas -->
            <Button Grid.Row="2"
                    Command="{Binding CargarMasVideosCommand}"
                    Padding="10"
                    Margin="10"
                    Background="#4A90D9"
                    Foreground="White"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Visibility="{Binding HayMasVideos, Converter={StaticResource BooleanToVisibilityConverter}}">
                Cargar mas videos
            </Button>
        </Grid>

        <!-- Separador -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#E0E0E0"/>

        <!-- Panel derecho: Detalle del video -->
        <Border Grid.Column="2"
                Background="White"
                BorderBrush="LightGray"
                BorderThickness="0,0,0,0">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding VideoCompletoSeleccionado}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="15">
                <StackPanel DataContext="{Binding VideoCompletoSeleccionado}">

                    <!-- Titulo del video -->
                    <TextBlock Text="{Binding Titulo}"
                               FontSize="20"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               Margin="0,0,0,15"
                               Foreground="DarkBlue"/>

                    <!-- Imagen/Preview del video -->
                    <Border Background="LightGray"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15"
                            MaxWidth="640"
                            MaxHeight="360">
                        <Grid>
                            <Image Source="{Binding UrlImagen}"
                                   Stretch="Uniform"
                                   RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding UrlImagen}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding UrlImagen}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>

                            <!-- Placeholder cuando no hay imagen -->
                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="50">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding UrlImagen}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding UrlImagen}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="Vista previa no disponible"
                                           FontSize="14"
                                           Foreground="Gray"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Boton de reproducir superpuesto -->
                            <Button Width="60"
                                    Height="60"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Background="Black"
                                    Opacity="0.7"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Content="&#x25B6;"
                                    Foreground="White"
                                    FontSize="24"
                                    Click="PlayButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Descripcion -->
                    <TextBlock Text="Descripcion:"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,8"/>
                    <Border Background="#F8F9FA"
                            BorderBrush="#E9ECEF"
                            BorderThickness="1"
                            Padding="12"
                            Margin="0,0,0,15"
                            Height="200">
                        <RichTextBox Name="DescripcionRichTextBox"
                                     IsReadOnly="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Height="176"
                                     FontFamily="Segoe UI Emoji"
                                     TextOptions.TextFormattingMode="Ideal"
                                     PreviewMouseLeftButtonDown="RichTextBox_PreviewMouseLeftButtonDown"
                                     MouseMove="RichTextBox_MouseMove"
                                     MouseLeave="RichTextBox_MouseLeave"/>
                    </Border>

                    <!-- Protocolo -->
                    <TextBlock Text="Protocolo:"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,8">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Protocolo}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Protocolo}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <Border Background="#F0F8FF"
                            BorderBrush="#B0C4DE"
                            BorderThickness="1"
                            Padding="12"
                            Margin="0,0,0,15"
                            Height="200">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Protocolo}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Protocolo}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <RichTextBox Name="ProtocoloRichTextBox"
                                     IsReadOnly="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Height="176"
                                     PreviewMouseLeftButtonDown="RichTextBox_PreviewMouseLeftButtonDown"
                                     MouseMove="RichTextBox_MouseMove"
                                     MouseLeave="RichTextBox_MouseLeave"/>
                    </Border>

                    <!-- Productos relacionados -->
                    <TextBlock Text="Productos en este video:"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,8">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Productos.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <ItemsControl ItemsSource="{Binding Productos}" Margin="0,0,0,15">
                        <ItemsControl.Style>
                            <Style TargetType="ItemsControl">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Productos.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ItemsControl.Style>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FAFAFA"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="10"
                                        Margin="0,0,0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding NombreProducto}"
                                                       FontWeight="SemiBold"
                                                       TextWrapping="Wrap"/>
                                            <TextBlock Foreground="Gray" FontSize="11">
                                                <Run Text="Ref: "/>
                                                <Run Text="{Binding Referencia}"/>
                                            </TextBlock>
                                        </StackPanel>
                                        <Button Grid.Column="1"
                                                Content="Ver producto"
                                                Command="{Binding DataContext.AbrirProductoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding Referencia}"
                                                Padding="8,4"
                                                VerticalAlignment="Center">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Referencia}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Referencia}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Seccion reportar error -->
                    <Border Background="#FFFBEA"
                            BorderBrush="#F5C16C"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Ayudanos a mejorar"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Foreground="DarkOrange"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Si ves un error en este video, puedes comunicarnoslo:"
                                       FontSize="12"
                                       Foreground="Black"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Hay productos en este video a los que debemos asignar una referencia. Por favor, asignala ahora. Gracias."
                                       Foreground="Red"
                                       FontWeight="Bold"
                                       Visibility="{Binding DataContext.HayVideosProductosSinReferencia,
                                            Converter={StaticResource BooleanToVisibilityConverter},
                                            RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,10"/>
                            <Button Content="Reportar error"
                                    Command="{Binding DataContext.CorrigeVideoProductoCommand,
                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    HorizontalAlignment="Left"
                                    Padding="8,4"
                                    Background="DarkOrange"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Mensaje cuando no hay video seleccionado -->
        <StackPanel Grid.Column="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding VideoCompletoSeleccionado}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <TextBlock Text="Selecciona un video de la lista"
                       FontSize="16"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
