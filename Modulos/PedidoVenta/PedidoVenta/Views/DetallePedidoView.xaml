<UserControl x:Class="DetallePedidoView"
             x:Name="detallePedidoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Nesto.Modulos.PedidoVenta"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:ControlesUsuario.Behaviors;assembly=ControlesUsuario"
             xmlns:controles="clr-namespace:ControlesUsuario;assembly=ControlesUsuario"
             xmlns:converters="clr-namespace:ControlesUsuario.Converters;assembly=ControlesUsuario"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" d:DataContext="{d:DesignInstance Type=local:DetallePedidoViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <!-- Issue #51: Proxy para bindings desde DataGridColumn (no está en árbol visual) -->
        <controles:BindingProxy x:Key="ViewModelProxy" Data="{Binding}" />
        <!-- Issue #266: Converter compartido desde ControlesUsuario -->
        <converters:PercentageConverter x:Key="porcentajeConverter" />

        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding estaAlbaraneada}" Value="True">
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="Foreground" Value="Gray"/>
                    <Setter Property="Cursor" Value="No"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding tienePicking}" Value="True">
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="Foreground" Value="Gray"/>
                    <Setter Property="Cursor" Value="No"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Issue #258: Estilo para celdas que se deshabilitan cuando TipoLinea=0 (Texto) -->
        <Style x:Key="CeldaDeshabilitadaParaTexto" TargetType="DataGridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding tipoLinea}" Value="0">
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="Foreground" Value="Gray"/>
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="ToolTip" Value="No aplicable a líneas de texto"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Issue #258: Estilo para celdas numéricas que se deshabilitan cuando TipoLinea=0 -->
        <Style x:Key="CeldaNumericaDeshabilitadaParaTexto" TargetType="DataGridCell">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding tipoLinea}" Value="0">
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="Foreground" Value="Gray"/>
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="ToolTip" Value="No aplicable a líneas de texto"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <xctk:BusyIndicator IsBusy="{Binding estaBloqueado}" BusyContent="{Binding textoBusyIndicator}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TabControl x:Name="TabControl" Grid.Row="0">
                <TabItem Header="Cabecera">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" ToolTip="Pulse el botón derecho del ratón para copiar los datos del pedido al portapapeles">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseRightButtonUp">
                                            <i:InvokeCommandAction Command="{Binding Path=DataContext.CopiarAlPortapapelesCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=StackPanel}}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <TextBlock Text="Pedido: "></TextBlock>
                                    <TextBlock Text="{Binding pedido.numero}"></TextBlock>
                                    <TextBlock Text="Cliente: "></TextBlock>
                                    <controles:SelectorCliente Name="txtSelectorCliente"
                                                               Empresa="1"
                                                               Contacto="{Binding DataContext.pedido.contacto, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                               Cliente="{Binding DataContext.pedido.cliente, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                               ClienteCompleto="{Binding DataContext.ClienteCompleto, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <controles:SelectorCliente.Style>
                                            <Style TargetType="controles:SelectorCliente">
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <!-- Por defecto habilitado -->
                                                <Style.Triggers>
                                                    <!-- Deshabilitar si está vacío o nulo -->
                                                    <DataTrigger Binding="{Binding DataContext.pedido.cliente, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DataContext.pedido.cliente, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Null}">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </controles:SelectorCliente.Style>
                                    </controles:SelectorCliente>
                                    <TextBlock Text="Fecha pedido:"></TextBlock>
                                    <DatePicker SelectedDate="{Binding pedido.fecha}"></DatePicker>
                                    <CheckBox IsChecked="{Binding pedido.notaEntrega}" IsEnabled="False" Margin="0,5,0,0">Nota de Entrega</CheckBox>

                                    <!-- Carlos 09/12/25: Grid reorganizada para selectores (Issue #245, #252, #253) -->
                                    <!-- Fila 1: Serie, Periodo, Vendedor Pedido, Vendedor Peluquería -->
                                    <!-- Fila 2 (solo CV): Forma Venta, Almacén -->
                                    <Grid Margin="0,5,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Fila 1: Serie, Periodo, Vendedor Pedido, Vendedor Peluquería -->
                                        <controles:SelectorSerie Grid.Row="0" Grid.Column="0"
                                            SerieSeleccionada="{Binding pedido.serie, Mode=TwoWay}"
                                            VisibilidadEtiqueta="Visible"
                                            Margin="0,0,5,0"/>
                                        <controles:SelectorPeriodoFacturacion Grid.Row="0" Grid.Column="1"
                                            Seleccionado="{Binding pedido.periodoFacturacion, Mode=TwoWay}"
                                            VisibilidadEtiqueta="Visible"
                                            Margin="0,0,5,0"/>
                                        <controles:SelectorVendedor Grid.Row="0" Grid.Column="2"
                                            Configuracion="{Binding configuracion}"
                                            Empresa="{Binding pedido.empresa}"
                                            Seleccionado="{Binding pedido.vendedor, Mode=TwoWay}"
                                            Etiqueta="Vendedor Pedido:"
                                            Margin="0,0,5,0"/>
                                        <controles:SelectorVendedor Grid.Row="0" Grid.Column="3"
                                            Configuracion="{Binding configuracion}"
                                            Empresa="{Binding pedido.empresa}"
                                            Seleccionado="{Binding vendedorPorGrupo.vendedor, Mode=TwoWay}"
                                            Etiqueta="Vendedor Peluquería:"/>

                                        <!-- Fila 2: Forma Venta y Almacén (siempre visibles, editables en serie CV con líneas editables) -->
                                        <StackPanel Grid.Row="1" Grid.Column="0"
                                            Margin="0,5,5,0">
                                            <TextBlock Text="Forma de Venta:"/>
                                            <controles:SelectorFormaVenta
                                                Empresa="{Binding pedido.empresa}"
                                                FormaVentaSeleccionada="{Binding FormaVentaSeleccionadaParaLineas, Mode=TwoWay}"
                                                IsEnabled="{Binding PuedeEditarSelectoresLinea}"/>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1" Grid.Column="1"
                                            Margin="0,5,5,0">
                                            <TextBlock Text="Almacén:"/>
                                            <controles:SelectorAlmacen
                                                AlmacenSeleccionado="{Binding AlmacenSeleccionadoParaLineas, Mode=TwoWay}"
                                                IsEnabled="{Binding PuedeEditarSelectoresLinea}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                                <DockPanel Grid.Column="1">
                                    <TextBox DockPanel.Dock="Top" Text="{Binding pedido.comentarios}" Background="LightYellow" Padding="3" Margin="3" TextWrapping="Wrap"></TextBox>
                                    <TextBox DockPanel.Dock="Bottom" Text="{Binding pedido.comentarioPicking}" Background="LightYellow" Padding="3" Margin="3" TextWrapping="Wrap"></TextBox>
                                </DockPanel>
                            </Grid>

                            <!-- Botones de acción -->
                            <Grid Margin="0,10,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <!-- Fila 0: Creación de documentos -->
                                <Button Grid.Row="0" Grid.Column="0" Command="{Binding CrearAlbaranVentaCommand}" Visibility="{Binding EsGrupoQuePuedeFacturar, Converter={StaticResource BooleanToVisibilityConverter}}">Crear Albarán</Button>
                                <Button Grid.Row="0" Grid.Column="1" Command="{Binding CrearFacturaVentaCommand}" Visibility="{Binding EsGrupoQuePuedeFacturar, Converter={StaticResource BooleanToVisibilityConverter}}">Crear Factura</Button>
                                <Button Grid.Row="0" Grid.Column="2" Command="{Binding CrearAlbaranYFacturaVentaCommand}" Visibility="{Binding EsGrupoQuePuedeFacturar, Converter={StaticResource BooleanToVisibilityConverter}}">Crear Albarán y Factura</Button>
                                <CheckBox Grid.Row="0" Grid.Column="3" IsChecked="{Binding PapelConMembrete}" VerticalAlignment="Center" HorizontalAlignment="Center">Papel con membrete</CheckBox>
                                <!-- Fila 1: Impresión (alineado con fila 0) -->
                                <Button Grid.Row="1" Grid.Column="0" Command="{Binding ImprimirAlbaranCommand}" Visibility="{Binding EsGrupoQuePuedeFacturar, Converter={StaticResource BooleanToVisibilityConverter}}">Imprimir Albarán</Button>
                                <Button Grid.Row="1" Grid.Column="1" Command="{Binding ImprimirFacturaCommand}" Visibility="{Binding EsGrupoQuePuedeFacturar, Converter={StaticResource BooleanToVisibilityConverter}}">Imprimir Factura</Button>
                                <Button Grid.Row="1" Grid.Column="2" Command="{Binding AbrirFacturarRutasCommand}" Visibility="{Binding EsGrupoQuePuedeFacturar, Converter={StaticResource BooleanToVisibilityConverter}}">Facturar Rutas</Button>
                                <!-- Fila 2: Picking, PDF y presupuestos -->
                                <Button Grid.Row="2" Grid.Column="0" Command="{Binding cmdAbrirPicking}">Sacar Picking</Button>
                                <Button Grid.Row="2" Grid.Column="1" Command="{Binding DescargarPresupuestoCommand}">Descargar PDF</Button>
                                <Button Grid.Row="2" Grid.Column="2" Command="{Binding AceptarPresupuestoCommand}" Visibility="{Binding mostrarAceptarPresupuesto, Converter={StaticResource BooleanToVisibilityConverter}}">Aceptar Presupuesto</Button>
                                <Button Grid.Row="2" Grid.Column="3" Command="{Binding PasarAPresupuestoCommand}">Pasar a Presupuesto</Button>
                            </Grid>
                            <TextBlock></TextBlock>
                        </StackPanel>
                        
                        <DataGrid Name="grdLineasCabecera" DockPanel.Dock="Bottom" ItemsSource="{Binding pedido.Lineas}" AutoGenerateColumns="False" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" ColumnWidth="*" CurrentCell="{Binding celdaActual, Mode=OneWayToSource}" SelectedItem="{Binding lineaActual}" RowStyle="{StaticResource DataGridRowStyle}" CanUserAddRows="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Estado" Binding="{Binding estado}" IsReadOnly="True" />
                                <DataGridTextColumn Header="Tipo" Binding="{Binding tipoLinea}" />
                                <DataGridTextColumn Header="Producto" Width="3*" Binding="{Binding Producto}" />
                                <DataGridTextColumn Header="Texto" Width="8*" Binding="{Binding texto}" />

                                <DataGridTextColumn Header="Cantidad" Width="2*" Binding="{Binding Cantidad}" />
                                <DataGridTextColumn Header="Precio" Width="3*" Binding="{Binding PrecioUnitario, StringFormat=c}">
                                    <DataGridTextColumn.CellStyle>
                                        <Style>
                                            <Setter Property="FrameworkElement.HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Descuento" Width="3*" Binding="{Binding DescuentoLinea, Converter={StaticResource porcentajeConverter}}" >
                                    <DataGridTextColumn.CellStyle>
                                        <Style>
                                            <Setter Property="FrameworkElement.HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Descuento Producto" Width="3*" Binding="{Binding DescuentoProducto, Converter={StaticResource porcentajeConverter}}" IsReadOnly="True" >
                                    <DataGridTextColumn.CellStyle>
                                        <Style>
                                            <Setter Property="FrameworkElement.HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridCheckBoxColumn Header="Aplicar Dto." Width="Auto" Binding="{Binding AplicarDescuento, UpdateSourceTrigger=PropertyChanged}"/>
                                <DataGridTextColumn Header="Almacén" Width="Auto" Binding="{Binding Almacen}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </TabItem>
                <TabItem Header="Entrega">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <controles:SelectorDireccionEntrega 
                            Grid.Column="0" 
                            DireccionCompleta="{Binding DireccionEntregaSeleccionada, Mode=TwoWay}" 
                            Empresa="{Binding pedido.empresa}" 
                            Cliente="{Binding pedido.cliente}" 
                            Seleccionada="{Binding pedido.contacto, Mode=TwoWay}">
                        </controles:SelectorDireccionEntrega>
                        <StackPanel Grid.Column="1">
                            <!-- Issue #51: Fechas de entrega individuales por línea -->
                            <CheckBox IsChecked="{Binding UsarFechasIndividuales}" ToolTip="Cuando está activo, cada línea tiene su propia fecha de entrega (editable en la pestaña Líneas)">Fechas individuales por línea</CheckBox>
                            <TextBlock Text="Fecha de Entrega:" Visibility="{Binding MostrarFechaEntregaGlobal, Converter={StaticResource BooleanToVisibilityConverter}}"></TextBlock>
                            <DatePicker SelectedDate="{Binding fechaEntrega}" Visibility="{Binding MostrarFechaEntregaGlobal, Converter={StaticResource BooleanToVisibilityConverter}}"></DatePicker>
                            <CheckBox IsChecked="{Binding pedido.servirJunto}">Servir Junto</CheckBox>
                            <CheckBox IsChecked="{Binding pedido.mantenerJunto}">Mantener Junto</CheckBox>
                            <DataGrid ItemsSource="{Binding ListaEnlacesSeguimiento}" AutoGenerateColumns="False" IsReadOnly="True" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" ColumnWidth="*">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat=d}" Width="Auto"/>
                                    <DataGridTextColumn Header="Agencia" Binding="{Binding AgenciaNombre}" Width="Auto"/>
                                    <DataGridTemplateColumn Header="Enlace">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <Hyperlink Command="{Binding DataContext.AbrirEnlaceSeguimientoCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}" 
                                                               CommandParameter="{Binding EnlaceSeguimiento}">
                                                        <Hyperlink.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="Copiar enlace" 
                                                                          Command="{Binding DataContext.CopiarEnlaceCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}"
                                                                          CommandParameter="{Binding EnlaceSeguimiento}"/>
                                                            </ContextMenu>
                                                        </Hyperlink.ContextMenu>
                                                        <Run Text="{Binding EnlaceSeguimiento}"/>
                                                    </Hyperlink>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Pago">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="3">
                            <controles:SelectorFormaPago Configuracion="{Binding configuracion}" Empresa="{Binding pedido.empresa}" Cliente="{Binding pedido.cliente}" Seleccionada="{Binding pedido.formaPago, Mode=TwoWay}"></controles:SelectorFormaPago>
                            <controles:SelectorPlazosPago Configuracion="{Binding configuracion}" Empresa="{Binding pedido.empresa}" Cliente="{Binding pedido.cliente}" Seleccionada="{Binding pedido.plazosPago, Mode=TwoWay}" Descuento="{Binding pedido.DescuentoPP, Mode=TwoWay}" TotalPedido="{Binding pedido.Total}" PlazoPagoCompleto="{Binding PlazoPagoCompleto, Mode=TwoWay}" ></controles:SelectorPlazosPago>
                            <TextBlock Text="Fecha vencimiento:"></TextBlock>
                            <DatePicker SelectedDate="{Binding pedido.primerVencimiento}"></DatePicker>
                            <TextBlock Text="CCC (Cuenta Corriente):" Margin="0,5,0,0"></TextBlock>
                            <controles:SelectorCCC
                                Empresa="{Binding pedido.empresa, Mode=OneWay}"
                                Cliente="{Binding pedido.cliente, Mode=OneWay}"
                                Contacto="{Binding pedido.contacto, Mode=OneWay}"
                                FormaPago="{Binding pedido.formaPago, Mode=OneWay}"
                                CCCSeleccionado="{Binding pedido.ccc, Mode=TwoWay}"
                                MinWidth="250"
                                Margin="0,3,0,3"
                                ToolTip="Seleccione el CCC para el recibo bancario. Auto-selecciona según forma de pago."/>
                            <TextBlock></TextBlock>
                            <TextBox Text="{Binding pedido.iva}" IsReadOnly="True">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDoubleClick" >
                                        <i:InvokeCommandAction Command="{Binding cmdCambiarIva}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>
                            <TextBlock></TextBlock>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <xctk:WatermarkTextBox Grid.Row="0" Text="{Binding CobroTarjetaCorreo, UpdateSourceTrigger=PropertyChanged}" Watermark="Correo electrónico para el cobro con tarjeta" Margin="0,3"></xctk:WatermarkTextBox>
                                <xctk:WatermarkTextBox Grid.Row="1" Text="{Binding CobroTarjetaMovil, UpdateSourceTrigger=PropertyChanged}" Watermark="Móvil para el cobro con tarjeta" Margin="0,3"></xctk:WatermarkTextBox>
                                <xctk:WatermarkTextBox Grid.Row="2" Text="{Binding CobroTarjetaImporte, StringFormat=c}" Watermark="Importe para el cobro con tarjeta" Margin="0,3"></xctk:WatermarkTextBox>
                                <Button Grid.Row="3" Command="{Binding EnviarCobroTarjetaCommand}">Mandar enlace pago</Button>
                            </Grid>
                            <CheckBox IsChecked="{Binding pedido.CrearEfectosManualmente}">Crear vencimientos manualmente</CheckBox>
                            <StackPanel Visibility="{Binding pedido.CrearEfectosManualmente, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ListBox ItemsSource="{Binding pedido.Efectos}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" >
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Margin="3,0" VerticalAlignment="Center">Vencimiento:</TextBlock>
                                                <DatePicker Grid.Column="1" VerticalContentAlignment="Center" SelectedDate="{Binding FechaVencimiento, StringFormat=d}"></DatePicker>
                                                <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="3,0">Importe:</TextBlock>
                                                <TextBox Grid.Column="3" VerticalContentAlignment="Center" Text="{Binding Importe, StringFormat=c}"></TextBox>
                                                <TextBlock Grid.Column="4" VerticalAlignment="Center" Margin="3,0">Forma Pago:</TextBlock>
                                                <TextBox Grid.Column="5" VerticalContentAlignment="Center" Text="{Binding FormaPago}"></TextBox>
                                                <TextBlock Grid.Column="6" VerticalAlignment="Center" Margin="3,0">CCC:</TextBlock>
                                                <TextBox Grid.Column="7" VerticalContentAlignment="Center" Text="{Binding CCC}"></TextBox>
                                                <Button Grid.Column="8" Margin="3" Command="{Binding RelativeSource={RelativeSource FindAncestor, 
                                                    AncestorType={x:Type ListBox}}, Path=ItemsSource.BorrarEfectoCommand}" 
                                                    CommandParameter="{Binding}"
                                                    VerticalAlignment="Center">🗑</Button>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <TextBlock>
                                    <Run Text="{Binding pedido.Efectos.DiasFinanciacion, Mode=OneWay}" />
                                    <Run Text="días de financiación"/>         
                                </TextBlock>
                                <Button Command="{Binding Path=pedido.Efectos.AnnadirEfectoCommand}">Añadir Nuevo Efecto</Button>
                            </StackPanel>
                        </StackPanel>
                        <DataGrid Grid.Column="1" ItemsSource="{Binding pedido.Prepagos}" AutoGenerateColumns="False" Margin="3">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Concepto" Binding="{Binding ConceptoAdicional}" Width="2*" />
                                <DataGridTextColumn Header="Cuenta" Binding="{Binding CuentaContable}" Width="Auto" />
                                <DataGridTextColumn Header="Importe" Binding="{Binding Importe,StringFormat=c}" Width="Auto">
                                    <DataGridTextColumn.CellStyle>
                                        <Style>
                                            <Setter Property="FrameworkElement.HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Factura" Binding="{Binding Factura}" IsReadOnly="True" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    
                </TabItem>
                <TabItem Header="Líneas" ToolTip="Alt + L">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid Name="grdLineas"  Grid.Column="0" ItemsSource="{Binding pedido.Lineas}" AutoGenerateColumns="False" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" ColumnWidth="*"
                                  CurrentCell="{Binding celdaActual, Mode=OneWayToSource}" SelectedItem="{Binding lineaActual}" RowStyle="{StaticResource DataGridRowStyle}" CanUserAddRows="True" IsReadOnly="False"
                                  BeginningEdit="grdLineas_BeginningEdit"
                                  PreviewKeyDown="grdLineas_PreviewKeyDown">
                            <!-- Issue #258: CommandBinding para interceptar CancelEdit y evitar crash con DataGridTemplateColumn -->
                            <DataGrid.CommandBindings>
                                <CommandBinding Command="DataGrid.CancelEditCommand" CanExecute="CancelEditCommand_CanExecute" Executed="CancelEditCommand_Executed"/>
                            </DataGrid.CommandBindings>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Estado" Binding="{Binding estado}" IsReadOnly="True" />
                                <!-- Issue #258: ComboBox para TipoLinea con valores válidos (0-3) -->
                                <DataGridComboBoxColumn Header="Tipo"
                                    ItemsSource="{x:Static local:DetallePedidoViewModel.TiposLinea}"
                                    SelectedValueBinding="{Binding tipoLinea, UpdateSourceTrigger=PropertyChanged}"
                                    SelectedValuePath="Valor"
                                    DisplayMemberPath="Descripcion"/>
                                <!-- Issue #258: Cambiado a DataGridTemplateColumn para soportar CuentaContableBehavior (TipoLinea=2) -->
                                <DataGridTemplateColumn Header="Producto" Width="3*" CellStyle="{StaticResource CeldaDeshabilitadaParaTexto}">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Producto}" VerticalAlignment="Center" Margin="2,0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <!-- Issue #258: NO usar UpdateSourceTrigger=PropertyChanged para que OnCeldaModificada
                                                 pueda comparar el texto nuevo con el valor anterior (que aún no se ha actualizado) -->
                                            <TextBox Text="{Binding Producto}"
                                                     VerticalAlignment="Center">
                                                <i:Interaction.Behaviors>
                                                    <!-- Issue #258: ProductoBehavior para visual feedback cuando TipoLinea=1 (productos) -->
                                                    <behaviors:ProductoBehavior
                                                        Empresa="{Binding DataContext.pedido.empresa, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        Cliente="{Binding DataContext.pedido.cliente, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        Contacto="{Binding DataContext.pedido.contacto, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        TipoLineaActual="{Binding tipoLinea}"
                                                        TipoLineaRequerido="1"
                                                        Cantidad="{Binding Cantidad}"/>
                                                    <!-- CuentaContableBehavior: Solo activo cuando TipoLinea=2 (cuentas contables) -->
                                                    <behaviors:CuentaContableBehavior
                                                        Empresa="{Binding DataContext.pedido.empresa, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        TipoLineaActual="{Binding tipoLinea}"
                                                        TipoLineaRequerido="2"
                                                        Texto="{Binding texto, Mode=TwoWay}"
                                                        Iva="{Binding iva, Mode=TwoWay}"/>
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Texto" Width="8*" Binding="{Binding texto}" />

                                <!-- Issue #258: Columnas deshabilitadas visualmente cuando TipoLinea=0 (Texto) -->
                                <DataGridTextColumn Header="Cantidad" Width="2*" Binding="{Binding Cantidad}" CellStyle="{StaticResource CeldaDeshabilitadaParaTexto}"/>
                                <DataGridTextColumn Header="Precio" Width="3*" Binding="{Binding PrecioUnitario, StringFormat=c}">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell" BasedOn="{StaticResource CeldaNumericaDeshabilitadaParaTexto}">
                                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                            <Style.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                </Style>
                                            </Style.Resources>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Descuento" Width="3*" Binding="{Binding DescuentoLinea, Converter={StaticResource porcentajeConverter}}" >
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell" BasedOn="{StaticResource CeldaNumericaDeshabilitadaParaTexto}">
                                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                            <Style.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                </Style>
                                            </Style.Resources>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Descuento Producto" Width="3*" Binding="{Binding DescuentoProducto, Converter={StaticResource porcentajeConverter}}" IsReadOnly="True" >
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell" BasedOn="{StaticResource CeldaNumericaDeshabilitadaParaTexto}">
                                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                            <Style.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                </Style>
                                            </Style.Resources>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridCheckBoxColumn Header="Aplicar Dto." Binding="{Binding AplicarDescuento, UpdateSourceTrigger=PropertyChanged}" CellStyle="{StaticResource CeldaDeshabilitadaParaTexto}"/>
                                <!-- Issue #51: Columna de fecha de entrega individual por línea -->
                                <DataGridTemplateColumn Header="Fecha Entrega" Width="3*"
                                    Visibility="{Binding Data.UsarFechasIndividuales, Source={StaticResource ViewModelProxy}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding fechaEntrega, StringFormat=d}" VerticalAlignment="Center" Margin="2,0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <DatePicker SelectedDate="{Binding fechaEntrega, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="BI" Width="3*" Binding="{Binding BaseImponible, StringFormat=c}" IsReadOnly="True">
                                    <DataGridTextColumn.CellStyle>
                                        <Style>
                                            <Setter Property="FrameworkElement.HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <xctk:PropertyGrid Grid.Column="1" x:Name="_propertyGrid" AutoGenerateProperties="False" SelectedObject="{Binding lineaActual}" IsReadOnly="True">
                            <xctk:PropertyGrid.EditorDefinitions>
                                <xctk:EditorTemplateDefinition TargetProperties="DescuentoLinea,DescuentoProducto">
                                    <xctk:EditorTemplateDefinition.EditingTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Value, StringFormat=p}" />
                                        </DataTemplate>
                                    </xctk:EditorTemplateDefinition.EditingTemplate>
                                </xctk:EditorTemplateDefinition>
                                <xctk:EditorTemplateDefinition TargetProperties="Bruto,PrecioUnitario">
                                    <xctk:EditorTemplateDefinition.EditingTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Value, StringFormat=c}" />
                                        </DataTemplate>
                                    </xctk:EditorTemplateDefinition.EditingTemplate>
                                </xctk:EditorTemplateDefinition>
                            </xctk:PropertyGrid.EditorDefinitions>
                            <xctk:PropertyGrid.PropertyDefinitions>
                                <xctk:PropertyDefinition TargetProperties="Almacen" DisplayName="Almacén"/>
                                <xctk:PropertyDefinition TargetProperties="AplicarDescuento" DisplayName="Aplicar Descuento" />
                                <xctk:PropertyDefinition TargetProperties="Bruto" DisplayName="Importe Bruto"/>
                                <xctk:PropertyDefinition TargetProperties="Cantidad" DisplayName="Cantidad"/>
                                <xctk:PropertyDefinition TargetProperties="delegacion" DisplayName="Delegación"/>
                                <xctk:PropertyDefinition TargetProperties="DescuentoLinea" DisplayName="Descuento"/>
                                <xctk:PropertyDefinition TargetProperties="DescuentoProducto" DisplayName="Descuento del Producto"/>
                                <xctk:PropertyDefinition TargetProperties="estaAlbaraneada" DisplayName="¿Tiene Albarán?"/>
                                <xctk:PropertyDefinition TargetProperties="estado" DisplayName="Estado"/>
                                <xctk:PropertyDefinition TargetProperties="estaFacturada" DisplayName="¿Está Facturada?"/>
                                <xctk:PropertyDefinition TargetProperties="fechaEntrega" DisplayName="Fecha de Entrega"/>
                                <xctk:PropertyDefinition TargetProperties="formaVenta" DisplayName="Forma de Venta"/>
                                <xctk:PropertyDefinition TargetProperties="id"  DisplayName="Nº Orden"/>
                                <xctk:PropertyDefinition TargetProperties="iva" DisplayName="Tipo de IVA"/>
                                <xctk:PropertyDefinition TargetProperties="oferta" DisplayName="Nº de Oferta"/>
                                <xctk:PropertyDefinition TargetProperties="picking" DisplayName="Picking"/>
                                <xctk:PropertyDefinition TargetProperties="PrecioUnitario" DisplayName="Precio Unitario"/>
                                <xctk:PropertyDefinition TargetProperties="Producto" DisplayName="Producto"/>
                                <xctk:PropertyDefinition TargetProperties="texto" DisplayName="Texto"/>
                                <xctk:PropertyDefinition TargetProperties="tienePicking" DisplayName="¿Tiene Picking?"/>
                                <xctk:PropertyDefinition TargetProperties="tipoLinea" DisplayName="Tipo de Línea"/>
                                <xctk:PropertyDefinition TargetProperties="Usuario" DisplayName="Usuario"/>
                                <xctk:PropertyDefinition TargetProperties="vistoBueno" DisplayName="Visto Bueno"/>
                            </xctk:PropertyGrid.PropertyDefinitions>
                        </xctk:PropertyGrid>

                    </Grid>
                </TabItem>
            </TabControl>
            <StackPanel Grid.Row="1">
                <Button Command="{Binding cmdModificarPedido}" Content="{Binding TextoBotonGuardar}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="1">Base Imponible</TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="2">Total</TextBlock>

                    <TextBlock Grid.Column="1" Grid.Row="0">Picking</TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="0">Total</TextBlock>

                    <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding pedido.BaseImponible, StringFormat=c}"></TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="2" Text="{Binding pedido.Total, StringFormat=c}"></TextBlock>

                    <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding pedido.baseImponiblePicking, StringFormat=c}"></TextBlock>
                    <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding pedido.totalPicking, StringFormat=c}"></TextBlock>

                    <TextBlock Grid.Column="3" Grid.Row="0" Text="Descuento Pedido:"></TextBlock>
                    <TextBox Grid.Column="4" Grid.Row="0" Name="txtDescuentoPedido" Text="{Binding descuentoPedido, StringFormat=p, Converter={StaticResource porcentajeConverter}}"></TextBox>
                </Grid>
            </StackPanel>
        </Grid>
    </xctk:BusyIndicator>
</UserControl>
