<UserControl x:Class="RapportsMenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Nesto.Modulos.Rapports"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Ribbon x:Name="MainMenu" x:FieldModifier="Protected Friend">
        <RibbonTab x:Name="tabClientes"
                            Header="Clientes">
            <RibbonGroup x:Name="grpRapports"
                                Header="Rapports">
                <RibbonButton Label="Rapports" LargeImageSource="Images/Rapport.png" Command="{Binding cmdAbrirModulo}" />
            </RibbonGroup>
        </RibbonTab>
    </Ribbon>
    
</UserControl>
