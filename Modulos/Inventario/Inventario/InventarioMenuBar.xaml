<UserControl x:Class="InventarioMenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Nesto.Modulos.Inventario"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
        <Ribbon x:Name="MainMenu" x:FieldModifier="Protected Friend">
            <RibbonTab x:Name="tabProductos"
                              Header="Productos">
                <RibbonGroup x:Name="grpInventario"
                                    Header="Inventarios">
                    <RibbonButton Label="Tienda" LargeImageSource="Images/Inventario.png" Command="{Binding cmdAbrirInventario}" />
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
    
</UserControl>
