<UserControl x:Class="Nesto.Modulos.OfertasCombinadas.Views.OfertasCombinadasMenuBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Nesto.Modulos.OfertasCombinadas.Views"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800">

    <Ribbon x:Name="MainMenu" x:FieldModifier="protected internal">
        <RibbonTab x:Name="tabProveedores"
                        Header="Proveedores">
            <RibbonGroup x:Name="grpMantenimientos"
                            Header="Mantenimientos">
                <RibbonButton Label="Ofertas Combinadas"
                              LargeImageSource="/Nesto;component/Images/OfertasCombinadas.png"
                              Command="{Binding AbrirModuloOfertasCombinadasCommand}"
                              ToolTip="Gestion de ofertas combinadas y ofertas por familia (solo grupo COMPRAS)"/>
            </RibbonGroup>
        </RibbonTab>
    </Ribbon>
</UserControl>
