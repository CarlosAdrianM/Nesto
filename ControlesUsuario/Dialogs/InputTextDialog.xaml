<UserControl x:Class="ControlesUsuario.Dialogs.InputTextDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             MinWidth="350">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding Title}" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
        <TextBlock Grid.Row="1" Text="{Binding Message}" TextWrapping="Wrap" Margin="0,0,0,15"/>

        <TextBox Grid.Row="2" Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                 MinWidth="300" Padding="5" FontSize="12"
                 x:Name="InputTextBox"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Aceptar" Command="{Binding AcceptCommand}" Width="80" Margin="0,0,10,0"
                    IsDefault="True"/>
            <Button Content="Cancelar" Command="{Binding CancelCommand}" Width="80"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</UserControl>
