<UserControl x:Class="ControlesUsuario.SelectorPlazosPago"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel Name="GridPrincipal">
        <TextBlock Text="{Binding Etiqueta}" Visibility="{Binding VisibilidadEtiqueta}"></TextBlock>

        <!-- Mensaje de deuda vencida/impagados -->
        <TextBlock Text="{Binding MensajeDeuda}"
                   Visibility="{Binding VisibilidadMensajeDeuda}"
                   Foreground="Orange"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   Margin="0,5,0,5"/>

        <!-- Mensaje de plazo no permitido -->
        <TextBlock Text="{Binding MensajePlazoNoPermitido}"
                   Visibility="{Binding VisibilidadMensajePlazoNoPermitido}"
                   Foreground="Red"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   Margin="0,5,0,5"/>

        <ComboBox MinWidth="300" ItemsSource="{Binding listaPlazosPago}" SelectedItem="{Binding plazosPagoSeleccionado}" DisplayMemberPath="descripcion"></ComboBox>
    </StackPanel>
</UserControl>
